<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryEvenDarker" android:radius="500dp" >

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryEvenDarker"/>
            <corners android:radius="@dimen/buttonCorners"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <stroke android:color="@color/colorPrimaryEvenDarker" android:width="@dimen/buttonBorder"/>
            <corners android:radius="@dimen/buttonCorners"/>
        </shape>
    </item>

</ripple>