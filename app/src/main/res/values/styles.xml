<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/DefaultTextStyle</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/DefaultButtonStyle</item>
    </style>

    <style name="DefaultTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BigButtonStyle" parent="DefaultButtonStyle">
        <item name="android:textSize">@dimen/buttonTextSizeLarge</item>
    </style>

    <style name="TextLarge" parent="DefaultTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody" parent="DefaultTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>

</resources>
